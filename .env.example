# Database Configuration (PostgreSQL for Vercel deployment)
DATABASE_URL=postgres://username:password@host:port/database

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# TextBee SMS Configuration
# Get these from https://textbee.dev/dashboard after setting up your Android device
TEXTBEE_API_KEY=your-textbee-api-key-here
TEXTBEE_DEVICE_ID=your-textbee-device-id-here

# Optional: Development settings
NODE_ENV=production