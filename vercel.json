{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "regions": ["sin1"],
  "functions": {
    "api/[...path].ts": {
      "maxDuration": 10,
      "memory": 1024,
      "includeFiles": "api/server/**,shared/**,node_modules/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/[...path]"
    },
    {
      "source": "/:path((?!api).*)*",
      "destination": "/index.html"
    }
  ]
}